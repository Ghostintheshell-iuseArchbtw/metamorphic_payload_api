# Metamorphic Payload API v3.0 Configuration
# Copy this file to .env and customize the values

# Security Configuration (REQUIRED)
# API key must be at least 32 characters long
API_KEY=your_secure_api_key_here_minimum_32_characters_change_this
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_64_characters
RATE_LIMIT_PER_MINUTE=100
MAX_PAYLOAD_SIZE=1048576

# Server Configuration
FLASK_ENV=production
FLASK_DEBUG=false
HOST=0.0.0.0
PORT=8080

# API Endpoints
OBFUSCATED_PATH=/api/v1/metamorphic/generate
DOWNLOAD_PATH=/api/v1/metamorphic/download
HEALTH_PATH=/health

# Payload Configuration
OUTPUT_DIRECTORY=./output
PAYLOAD_RETENTION_HOURS=24
MAX_CONCURRENT_GENERATIONS=5

# Database Configuration
ENABLE_DATABASE=true
DATABASE_PATH=data/payloads.db
DATABASE_URL=sqlite:///data/payloads.db

# Staging Server Configuration
STAGING_SECRET_KEY=change_this_staging_secret_key_minimum_32_chars
STAGING_ENCRYPTION_KEY=change_this_encryption_key_32_characters
STAGING_PORT=9090
STAGING_HOST=0.0.0.0

# Monitoring & Metrics
ENABLE_METRICS=true
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Advanced Security Features
SUSPICIOUS_ACTIVITY_THRESHOLD=10
ENABLE_ADVANCED_LOGGING=true
SECURITY_HEADERS_ENABLED=true

# Performance Tuning
WORKER_TIMEOUT=30
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50
